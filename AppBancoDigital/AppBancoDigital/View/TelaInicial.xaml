<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.TelaInicial"
             BackgroundColor="#FFFFFF">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="logo_navbar" Text=""/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="#FC7C04" ColumnDefinitions="*, *" RowDefinitions="*">
                <Image Grid.Column="0" Grid.Row="0" x:Name="img_logo" Aspect="AspectFit"
                       HeightRequest="55"/>
                <Label x:Name="lbl_correntista" FontSize="25" TextColor="#FFFFFF" Text=""
                    HorizontalTextAlignment="Start" Padding="10" Grid.Row="0" Grid.Column="1"/>
            </Grid>

            <Grid RowDefinitions="125, 30, *" ColumnDefinitions="*,*,*">
                <ImageButton VerticalOptions="Center" x:Name="btn_icone_pix" Grid.Column="0" 
                             Grid.Row="0" BackgroundColor="White" Margin="17"
                             BorderWidth="1" BorderColor="Black" CornerRadius="50"
                             />
                <Label Text="PIX" TextColor="Black" Grid.Row="1" Grid.Column="0"
                       HorizontalTextAlignment="Center" FontSize="20" Margin="0"/>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>